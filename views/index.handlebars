<h1>Burgers</h1>

<div id="main" class="clearfix">

    <div id="devoured">
        <h2 id="devouredHeader" class="">Devoured these burgers</h2>
        <ol>
            {{#each burgers}} 
                {{#if this.devoured}} 
                    <!-- {{> burger-devoured devour = true}}  -->
                    <li>{{ burger_name }} </li>
                {{/if}}               
            {{/each}}

        </ol>

    </div>

    <div class="verticalLine"></div>

    <div id="notDevoured">
        <h2 id="notDevouredHeader"> Haven't devoured ... yet </h2>

        <ol>
            {{#each burgers}} 
               {{#unless this.devoured}} 

                 {{> burger-devoured devour = true}}  
                     
                {{/unless}}            
            {{/each }}
            
        </ol>

    </div>

</div>
<h3>Add a Burger</h3>
<form class="create-form">
    <div class="form-group">
        <label for="eat">Burger Name: </label>
        <input type="text" id="eat" name="name"></input>
    </div>

    <button type="submit">Submit</button>
</form>