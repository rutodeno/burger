<h1>Burgers</h1>

<div id="main" class="clearfix">

    <div id="devoured">
        <h2 id="devouredHeader" class="">Devoured these burgers</h2>
        <ul>
            {{#each burgers}} 
             <!--   {{#if devour}} 
                    {{> burger-devoured devoured=false}} 
                {{/if}}  

                -->   
            {{/each}}

        </ul>

    </div>

    <div class="verticalLine"></div>

    <div id="notDevoured">
        <h2 id="notDevouredHeader"> Haven't devoured ... yet </h2>

        <ul>
            {{#each burgers}} 
              <!--  {{#unless devour}} 
                    {{> burger-devoured devoured=true}}
                {{/unless}}
                -->
            {{/each }}
            
        </ul>

    </div>

</div>
<h3>Add a Burger</h3>
<form class="create-form">
    <div class="form-group">
        <label for="eat">Burger Name: </label>
        <input type="text" id="eat" name="name"></input>
    </div>

    <button type="submit">Submit</button>
</form>